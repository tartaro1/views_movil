<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editext_login_bkg"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/idPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedido #"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/estadoPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Estado:"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="DirecciÃ³n:"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/precioVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Precio: $"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/fechaPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Fecha:"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/nombreCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Cliente:"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/idRepartidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{order.getID_Pedido()}"
            android:textSize="14sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
